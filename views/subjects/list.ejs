<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://kit.fontawesome.com/495c8b4cb1.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <div class="title">
      <h1 class="menu-title">Subjects list</h1>
    </div>
    <button class="glow-on-hover" type="button">
      <a href="/subjects/create-subject" class="create-btn">
        <i class="fa-solid fa-plus"></i>
        Create</a
      >
    </button>
    <div class="content">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Subject name</th>
            <th scope="col">Hours</th>
            <th scope="col">Teacher name</th>
            <th scope="col">Email</th>
            <th scope="col">Tel</th>
          </tr>
        </thead>
        <tbody>
          <% items.map((item,key)=>{ %>
          <tr>
            <th scope="row"><%= key+1 %></th>
            <td><%= item.subjectName %></td>
            <td><%= item.hours %></td>
            <td><%= item.teacherName %></td>
            <td><%= item.email %></td>
            <td><%= item.tel %></td>
            <td class="action">
              <a href="/subjects/edit-subject/<%= item._id %>"
                ><i class="fa-solid fa-pen-to-square"></i
              ></a>
              <form
                action="/subjects/delete-subject/<%= item._id%>"
                method="post"
              >
                <button
                  onclick="return confirm('Bạn chắc chắn muốn xóa <%= item.name %>?')"
                  type="submit"
                  class="delete-btn"
                >
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </body>
</html>
